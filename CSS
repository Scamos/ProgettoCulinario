.container { /*Seleziona tutti gli elementi con classe container.*/
    max-width: 400px; /*Imposta la larghezza massima del contenitore a 400 pixel.*/
    margin: 50px auto; /*Imposta un margine di 50 pixel in alto e in basso, e auto ai lati, per centrare il contenitore orizzontalmente.*/
    padding: 20px; /* Aggiunge uno spazio interno (bordo interno) di 20 pixel al contenitore.*/
    border: 1px solid #ccc; /*Aggiunge un bordo di 1 pixel con colore grigio chiaro al contenitore.*/
    border-radius: 5px; /*Arrotonda gli angoli del contenitore a 5 pixel.*/
}

.form-group { /*Seleziona tutti gli elementi con classe form-group.*/
    margin-bottom: 15px; /*Aggiunge un margine inferiore di 15 pixel a ogni gruppo di campi del modulo.*/
}

label { /*Seleziona tutti gli elementi <label> (etichetta).*/
    display: block; /*Imposta l'etichetta come un blocco, in modo che abbia un layout a riga singola (l'elemento deve essere visualizzato come un elemento di blocco, occupando tutta la larghezza disponibile e iniziando sempre su una nuova riga, utile per creare layout a blocchi dove ogni elemento occupa l'intera larghezza disponibile).*/
    margin-bottom: 5px; /*Aggiunge un margine inferiore di 5 pixel all'etichetta.*/
}

/*Seleziona tutti gli elementi di input di tipo testo.*/
/*Seleziona tutti gli elementi di input di tipo email.*/
/*Seleziona tutti gli elementi di input di tipo telefono.*/
/*Seleziona tutti gli elementi di input di tipo password.*/
/*Seleziona tutti gli elementi di input di tipo numero.*/
/*Seleziona tutti gli elementi di input di tipo file.*/
input[type="text"], input[type="email"], input[type="tel"], input[type="password"], input[type="number"], input[type="file"] {
    width: 90%; /*Imposta la larghezza degli input (dei box degli input) al 90% del loro contenitore.*/
    padding: 10px; /*Aggiunge uno spazio interno (bordo interno) di 10 pixel agli input.*/
    border: 1px solid #ccc; /*Aggiunge un bordo di 1 pixel con colore grigio chiaro agli input (crea i "box" degli input).*/
    border-radius: 4px; /*Arrotonda gli angoli degli input (dei box degli input) a 4 pixel.*/
}

button { /*Seleziona tutti gli elementi <button>.*/
    padding: 10px 15px; /*Aggiunge uno spazio interno di 10 pixel in alto e in basso e 15 pixel ai lati al pulsante.*/
    background-color: #007BFF; /*Imposta il colore di sfondo del pulsante a blu.*/
    color: #fff; /*Imposta il colore del testo del pulsante a bianco.*/
    border: none; /*Rimuove il bordo del pulsante.*/
    border-radius: 4px; /*Arrotonda gli angoli del pulsante a 4 pixel.*/
    cursor: pointer; /*Cambia il cursore del mouse quando si passa sopra il pulsante a "pointer".*/
}

button:hover { /*Stile applicato quando il cursore del mouse è sopra il pulsante.*/
    background-color: #0056b3; /*Cambia il colore di sfondo del pulsante a una tonalità più scura di blu quando il cursore è sopra di esso.*/
}

